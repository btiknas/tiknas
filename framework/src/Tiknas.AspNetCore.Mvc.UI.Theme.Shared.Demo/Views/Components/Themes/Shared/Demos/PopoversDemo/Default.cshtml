@using Tiknas.AspNetCore.Mvc.UI.Theme.Shared.Demo.Views.Components.Themes.Shared.Demos.PopoversDemo

<tiknas-component-demo-section title="Example" view-path="@PopoversDemoViewComponent.ViewPath">
    <tiknas-button button-type="Outline_Secondary" tiknas-popover="Hi, i'm popover content!">
        Popover Default
    </tiknas-button>
    <tiknas-button button-type="Outline_Secondary" tiknas-popover-top="Hi, i'm popover content!" title="Popover Title">
        Popover With Title
    </tiknas-button>
    <tiknas-button button-type="Outline_Secondary" tiknas-popover-right="Hi, i'm popover content!" title="Popover Title" dismissible="true">
        Dismissible Popover
    </tiknas-button>
    <tiknas-button button-type="Outline_Danger" tiknas-popover-left="Hi, i'm popover content!" title="Popover Title" disabled="true">
        Disabled Popover
    </tiknas-button>
</tiknas-component-demo-section>
