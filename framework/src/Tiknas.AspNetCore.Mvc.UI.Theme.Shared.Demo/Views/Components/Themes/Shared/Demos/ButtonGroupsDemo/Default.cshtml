<tiknas-component-demo-section title="Vertical variation" view-path="@ButtonGroupsDemoViewComponent.ViewPath">
    <tiknas-button-group direction="Vertical">
        <tiknas-button button-type="Secondary">Button</tiknas-button>
        <tiknas-button button-type="Secondary">Button</tiknas-button>
        <tiknas-button button-type="Secondary">Button</tiknas-button>
        <tiknas-dropdown>
            <tiknas-dropdown-button button-type="Secondary" text="Dropdown" />
            <tiknas-dropdown-menu>
                <tiknas-dropdown-item href="#"> Dropdown link </tiknas-dropdown-item>
                <tiknas-dropdown-item href="#"> Dropdown link </tiknas-dropdown-item>
            </tiknas-dropdown-menu>
        </tiknas-dropdown>
    </tiknas-button-group>
</tiknas-component-demo-section>
