                            <tiknas-dropdown-item href="#">Something else here</tiknas-dropdown-item>
                            <tiknas-dropdown-divider />
                            <tiknas-dropdown-item href="#">Separated link</tiknas-dropdown-item>
                        </tiknas-dropdown-menu>
                    </tiknas-dropdown>
                </tiknas-nav-item>
                <tiknas-nav-item>
                    <a tiknas-nav-link disabled="true" href="#">Disabled</a>
                </tiknas-nav-item>
            </tiknas-navbar-nav>
            <span tiknas-navbar-text>
                Sample Text
            </span>
        </tiknas-navbar-toggle>
    </tiknas-nav-bar>
</tiknas-component-demo-section>

