<tiknas-component-demo-section title="Example" view-path="@NavbarsDemoViewComponent.ViewPath">
    <tiknas-nav-bar size="Lg" navbar-style="Dark_Dark">
        <a tiknas-navbar-brand href="#">Navbar</a>
        <tiknas-navbar-toggle>
            <tiknas-navbar-nav>
                <tiknas-nav-item active="true">
                    <a tiknas-nav-link href="#">Home <span class="visually-hidden">(current)</span></a>
